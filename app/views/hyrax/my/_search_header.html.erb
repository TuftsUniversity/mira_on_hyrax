<%= render 'did_you_mean' %>

<%= render 'facets' %>
<%= render 'constraints' %>

<div class="row">
  <div class="col-sm-5 col-md-6">
    <%= render 'hyrax/my/sort_and_per_page' %>
  </div>
  <div class="col-sm-7 col-md-6">
    <%= render 'search_form' %>
  </div>
</div>

<div class="batch-info">
  <%= render 'hyrax/dashboard/collections/form_for_select_collection', user_collections: @user_collections %>

  <div class="batch-toggle">
    <% session[:batch_edit_state] = "on" %>
    <div class="button_to-inline">
      <%= button_to "Edit Selected", hyrax.edit_batch_edits_path, method: :get, class: "btn btn-update btn-primary hidden submits-batches", data: { behavior: 'batch-edit' }, id: 'batch-edit' %>
    </div>
    <%= batch_delete %>
     <%= button_tag "Add to Collection", class: 'btn btn-primary submits-batches submits-batches-add',
          data: { toggle: "modal", target: "#collection-list-container" } %>
    <div class="tufts-buttons">
      <%= button_to "Apply Template", main_app.new_template_update_path, method: :get, class: "btn btn-primary submits-batches" %>
      <%= button_to "Publish", main_app.batches_path, method: :post, params: { batch: { batchable_attributes: { batch_type: "Publish" } } }, class: "btn btn-primary submits-batches" %>
      <%= button_to "Unpublish", main_app.batches_path, method: :post, params: { batch: { batchable_attributes: { batch_type: "Unpublish" } } }, class: "btn btn-primary submits-batches" %>
      <%= button_to "Export Metadata", main_app.metadata_exports_path, method: :post, class: "btn btn-primary submits-batches" %>
    </div>
  </div>
</div>
